HOST=0.0.0.0
PORT=8081

# ClickHouse
CLICKHOUSE_ENABLED=true
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Consent / Policy
POLICY_DEFAULT_TEMPLATE=balanced
POLICY_CONFIG_PATH=./config/site-policies.json

# Privacy
STABLE_ID_SALT=change-me-stable-id-salt
IP_HASH_SALT=change-me-ip-salt

# Traffic filter (comma-separated)
TRAFFIC_FILTER_UA_DENY=bot,crawler,spider,headless
TRAFFIC_FILTER_UA_ALLOW=
TRAFFIC_FILTER_IP_DENY=
TRAFFIC_FILTER_IP_ALLOW=
TRAFFIC_FILTER_ASN_DENY=
TRAFFIC_FILTER_ASN_ALLOW=
TRAFFIC_FILTER_BLOCK_INTERNAL=true

# Retention cleanup cron (every day 03:15)
RETENTION_CRON=15 3 * * *
RETENTION_JOB_ENABLED=true
DEFAULT_RETENTION_DAYS=180

# Metrics / EQS
METRICS_SESSION_INACTIVITY_MINUTES=30
METRICS_ATTENTION_HEARTBEAT_MS=5000
METRICS_BOT_UA_PATTERN=(bot|crawler|spider|headless|slurp|bingpreview|uptime|monitor)
EQS_WEIGHT_ATTENTION=0.5
EQS_WEIGHT_SCROLL=0.3
EQS_WEIGHT_CONVERSION=0.2
EQS_ATTENTION_NORMALIZATION_MS=30000

# Cohort batch refresh
COHORT_REFRESH_ENABLED=true
COHORT_REFRESH_CRON=25 3 * * *
COHORT_REFRESH_LOOKBACK_DAYS=30

# Paths query defaults
PATHS_DEFAULT_TOP_N=20
PATHS_DEFAULT_MAX_PATH_LENGTH=8
PATHS_DEFAULT_SAMPLE_RATE=1
PATHS_DEFAULT_EVENT_FETCH_LIMIT=300000
