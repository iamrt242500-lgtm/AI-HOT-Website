# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_news_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# OpenAI API (for AI Summarization)
OPENAI_API_KEY=sk-your-openai-api-key-here

# X (Twitter) API Credentials
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ai-news-aggregator/1.0

# Medium RSS Feed URLs (공개 RSS 사용)
MEDIUM_FEEDS=https://medium.com/tag/artificial-intelligence/feed,https://medium.com/tag/technology/feed

# Facebook Graph API (선택사항)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Instagram (선택사항 - RSS 또는 비공식 API)
INSTAGRAM_SESSION_ID=your_instagram_session_id

# News Collection Settings
COLLECTION_INTERVAL_MINUTES=5
MAX_NEWS_PER_SOURCE=20
NEWS_RETENTION_DAYS=30

# Cache Settings
CACHE_TTL_LATEST=300
CACHE_TTL_TRENDING=600
CACHE_TTL_RECOMMENDATIONS=900

# Translation Configuration
OPENAI_MODEL=gpt-4
DEFAULT_SOURCE_LANGUAGE=en
TARGET_LANGUAGE=ko
TRANSLATION_BATCH_SIZE=5
TRANSLATION_RETRY_ATTEMPTS=3

